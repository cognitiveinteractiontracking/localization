<launch>

  <arg name="id" default="0"/> 

  <node pkg="robot_localization" type="ekf_localization_node" name="ekf_wheel_odometry_$(arg id)"> 

    <!-- Frequency of the main run loop. -->
    <param name="frequency" value="50"/>

    <param name="map_frame" value="map"/>
    <param name="odom_frame" value="odom"/>
    <param name="base_link_frame" value="base_link/$(arg id)"/>
    <param name="world_frame" value="world"/>
    <param name="two_d_mode" value="false"/>

    <remap from="odometry/filtered" to="odometry/filtered/$(arg id)"/>


    <param name="odom0" value="/artoolkit5_cam1/cam/odom/$(arg id)"/>
    <rosparam param="odom0_config">[true,  true,  true, 
                                    true, true, true, 
                                    false, false, false, 
                                    false, false, false,
                                    false, false, false]</rosparam>
    <param name="odom0_differential" value="false"/>
    <param name="odom0_relative" value="false"/>

